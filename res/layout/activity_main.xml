<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overlay Screen Capture - Demo"
        android:textSize="18sp"
        android:paddingBottom="12dp" />

    <Button
        android:id="@+id/btnRequestProjection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demander permission capture d'écran" />

    <Button
        android:id="@+id/btnStartOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Démarrer bulle flottante" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions: Autorisez la capture, puis lance la bulle. Ouvre Instagram et clique sur la bulle pour capturer l'écran." />
</LinearLayout>
